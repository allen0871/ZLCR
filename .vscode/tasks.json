{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Test",
            "dependsOrder": "sequence",
            "dependsOn": [
                "gen",
                "build",
                "flash"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "reveal": "silent"
            }
        },
        {
            "label": "Run Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "gen",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "reveal": "silent"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "ninja",
            "args": [
                "-C",
                "build"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "interface/jlink.cfg",
                "-c",
                "'transport select swd'",
                "-f",
                "target/stm32f4x.cfg",
                "-c",
                "'program build/eabi/zlcr_beta.elf reset exit'"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
        {
            "label": "gen",
            "type": "shell",
            "command": "gn",
            "args": [
                "gen",
                "build"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "gn",
            "args": [
                "clean",
                "build"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        },
        {
            "label": "openocd",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "interface/jlink.cfg",
                "-c",
                "'transport select swd'",
                "-f",
                "target/stm32f4x.cfg"
            ],
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}